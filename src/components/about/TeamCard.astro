---
export interface Props {
  name: string;
  role: string;
  image: string;
  description?: string;
}

const { name, role, image, description } = Astro.props;
---

<div
  class="bg-white rounded-xl shadow-md overflow-hidden w-full max-w-xs text-center hover:shadow-lg transition"
>
  <img src={image} alt={name} class="w-full h-52 object-cover" />
  <div class="p-5">
    <h3 class="text-xl font-bold text-[#0B2545] mb-1">{name}</h3>
    <p class="text-gray-600 font-medium mb-3">{role}</p>
    {description && <p class="text-gray-500 text-sm">{description}</p>}
  </div>
</div>
