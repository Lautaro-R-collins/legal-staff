---
import Base from "../../layouts/Base.astro";
import { blogPosts } from "../../Data/blogData.js"; 

export async function getStaticPaths() {
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post }, 
  }));
}

const { post } = Astro.props;
---

<Base title={post.title}>
  <article class="max-w-3xl mx-auto px-6 py-20">
    <img
      src={post.image}
      alt={post.title}
      class="w-full h-72 object-cover rounded-2xl shadow mb-8"
    />

    <h1 class="text-3xl md:text-4xl font-bold text-[#0B2545] mb-4">
      {post.title}
    </h1>

    <p class="text-gray-500 text-sm mb-8">
      {post.date} â€¢ {post.author}
    </p>

    <div class="prose prose-lg max-w-none text-gray-800" set:html={post.content}></div>
  </article>
</Base>
