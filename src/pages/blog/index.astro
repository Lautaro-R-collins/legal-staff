---
import Base from "../../layouts/Base.astro";
import { blogPosts } from "../../Data/blogData.js";
---

<Base title="Blog" meta_title="Artículos legales | Legal Staff">
  <section class="px-6 py-20 max-w-7xl mx-auto">
    <h1 class="text-center text-[#0B2545] text-3xl md:text-4xl font-extrabold uppercase tracking-[3px] mb-12">
      Blog Legal
    </h1>

    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
      {blogPosts.map((post) => (
        <article class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-lg transition">
          <a href={`/blog/${post.slug}`} class="block">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-56 object-cover"
            />
          </a>

          <div class="p-6 flex flex-col justify-between h-full">
            <div>
              <h2 class="text-xl font-bold text-[#0B2545] mb-2">
                <a href={`/blog/${post.slug}`} class="hover:underline">
                  {post.title}
                </a>
              </h2>
              <p class="text-gray-600 text-sm mb-4">{post.description}</p>
            </div>

            <a
              href={`/blog/${post.slug}`}
              class="text-[#0B2545] font-semibold hover:text-[#F9C74F] transition"
            >
              Leer más →
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</Base>
